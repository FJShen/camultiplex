#include "camultiplex/my_nodes.h"

namespace camera{

    void counter::updateSeq(unsigned int value){
	if(first_time){
	    current_seq = value;
	    first_time = false;
	    return;
	}
	else{
	    previous_seq = current_seq;
	    current_seq = value;
	    loss += (current_seq - previous_seq -1);
	    return;
	}
    }

    unsigned int counter::getLoss(){
	return loss;
    }

    unsigned int counter::getCurrentSeq(){
	return current_seq;
    }




}
